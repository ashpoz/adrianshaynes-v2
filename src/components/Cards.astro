---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

{title && <h2>{title}</h2>}
<div class="cards">
  <slot />
</div>

<style is:global>
  .cards {
    display: grid;
    gap: 1rem;
    grid-template-columns: repeat(auto-fit, minmax(min(100%, 300px), 1fr));
    padding: 0;
  }
</style>
